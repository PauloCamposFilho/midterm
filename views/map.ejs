<!DOCTYPE html>
<html>
  <head>
    <title>WikiMap</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/_head') %>
  </head>
  <body>
    <%- include('partials/_nav-bar') %>
    <div class="map-container">
      <div id="map" data-mapId="<%= mapId %>"></div>
      <div style="display: flex; flex-wrap: wrap;">
        <form id="mapInfo">
          <input type="hidden" name="id" value="<%= mapId %>">
          <input type="text" name="title" placeholder="Title"/>
          <input type="text" name="description" placeholder="description"/>
          <input type="text" name="thumbnail_photo" placeholder="URL of image"/>
          <button type="button" id="saveMap">Save Map</button>
          <img class="map-thumbnail" style="max-width: 100px;">
        </form>
      </div>
    </div>
    <form id="markerInfo">
      <input type="number" name="id" placeholder="0" />
      <input type="text" name="title" placeholder="Title"/>
      <input type="text" name="description" placeholder="description"/>
      <input type="text" name="latitude" />
      <input type="text" name="longitude" />
      <button type="button" id="savePinData">Save Pin</button>
    </form>
    <% if (mapId > 0) { %>
      <select id="mapEditors">
        <option value="0">Select Editor</option>
        <% for (const user in users) { %>
          <option value="<%= users[user].id %>"><%= users[user].username %></option>
        <% } %>
      </select>
      <button type="button" class="btn btn-primary addEditor">Add Editor</button>
    <% } %>
  </body>
</html>
